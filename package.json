{
  "name": "panic-ranger",
  "version": "0.0.1",
  "description": "a new game",
  "main": "index.js",
  "author": "Les Orchard <me@lmorchard.com>",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lmorchard/panic-ranger.git"
  },
  "devDependencies": {
    "babel-cli": "^6.22.2",
    "babel-plugin-external-helpers": "^6.18.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-stage-0": "^6.16.0",
    "babel-register": "^6.18.0",
    "browser-sync": "^2.18.7",
    "chai": "^3.5.0",
    "copy": "^0.3.0",
    "eslint": "^3.10.2",
    "eslint-plugin-promise": "^3.4.0",
    "gh-pages": "^0.12.0",
    "glob": "^7.1.1",
    "lodash": "^4.17.4",
    "lodash.defaults": "^4.2.0",
    "mkdirp": "^0.5.1",
    "mocha": "^3.2.0",
    "npm-run-all": "^3.1.2",
    "onchange": "^3.2.0",
    "rimraf": "^2.5.4",
    "rollup": "^0.36.4",
    "rollup-plugin-babel": "^2.6.1",
    "rollup-plugin-commonjs": "^5.0.5",
    "rollup-plugin-conditional": "^1.1.1",
    "rollup-plugin-node-globals": "^1.1.0",
    "rollup-plugin-node-resolve": "^2.0.0",
    "rollup-plugin-replace": "^1.1.1",
    "rollup-plugin-uglify": "^1.0.1",
    "shx": "^0.2.1",
    "sinon": "^1.17.6"
  },
  "dependencies": {
    "dat-gui": "^0.5.0",
    "memory-stats": "^1.0.2",
    "pixi-extra-filters": "^1.1.0",
    "pixi-filters": "^1.0.6",
    "pixi.js": "^4.3.5",
    "stats-js": "^1.0.0-alpha1"
  },
  "scripts": {
    "start": "npm run clean && npm run lint && npm run test && npm run build && npm-run-all --parallel watch server",
    "clean": "rimraf dist && mkdirp dist",
    "build": "npm-run-all --parallel build:*",
    "watch": "npm-run-all --parallel watch:*",
    "lint": "npm-run-all --parallel lint:*",
    "test": "npm-run-all --parallel test:*",
    "server": "browser-sync start --reload-debounce 500 --no-open --server --serveStatic dist --files \"dist/**/*.css, dist/**/*.js, dist/**/*.html\"",
    "deploy": "gh-pages -d dist",
    "build:html": "shx cp src/*.html dist/",
    "watch:html": "onchange -p -v \"src/*.html\" -- npm-run-all --parallel build:html",
    "build:css": "shx cp src/*.css dist/",
    "watch:css": "onchange -p -v \"src/*.css\" -- npm-run-all --parallel build:css",
    "lint:js": "eslint --color src test",
    "build:js": "rollup -c --environment entry:index",
    "watch:js": "onchange -p -v \"src/**/*.js\" \"test/**/*.js\" -e \"src/sketches/**/*.js\" -- npm-run-all --parallel lint:js test:js build:js build:sketches",
    "test:js": "mocha --colors --compilers js:babel-register --recursive",
    "build:sketches": "babel-node bin/build-sketches.js",
    "watch:sketches": "onchange -p -v \"src/sketches/**/*.js\" -- babel-node bin/build-sketches.js {{changed}}"
  }
}
